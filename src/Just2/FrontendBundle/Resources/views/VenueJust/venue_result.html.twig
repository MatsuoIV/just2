{% extends 'Just2FrontendBundle:Theme:base.html.twig' %}

{% block script %}
	<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
	<link rel="stylesheet" type="text/css" href="/css/jquery.timepicker.css">
    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <script src="/js/jquery.timepicker.js"></script> 

    <script>
    $(function() {
        $('.datepicker').datepicker({
            showOn: "button",
            buttonImage: "http://jqueryui.com/resources/demos/datepicker/images/calendar.gif",
            buttonImageOnly: true
        });
    });
    $(function() {
    	$('.timepicker').timepicker();
    });

    </script>
{% endblock %}

{% block title %}Venue Search Results {{ parent() }}{% endblock %}


{% block content %}



	{% for id in vs %}
		<div class="row">
			<table class="table table-bordered">
				<form action="{{ path('venue_reserve', { 'ocassion_id': id.ocassion.id, 'venue_id': id.venue.id }) }}" method="POST">
				<tr>
					<th><label class="checkbox"><input type="checkbox">Add to watch list</label></th>
				</tr>
				<tr>
					<td rowspan="7" class="span6" style="text-align: center">
						<img src="/img/venues/{{ id.venue.image }}">
					</td>
					<td>
						<div class="span3">Venue:</div>
						<div class="span3">{{ id.venue.name }}</div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">Occasion:</div>
						<div class="span3">{{ id.ocassion.name }}</div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">When:</div>
						<div class="span3"><input type="text" name="venuedate" class="datepicker span2" required></div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">Time:</div>
						<div class="span3"><input type="text" name="venuetime" class="timepicker span2" required></div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">Bid Start:</div>
						<div class="span3"><input type="text" name="venuebid" class="datepicker span2" required></div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">Location:</div>
						<div class="span3">{{ id.venue.address }}</div>
					</td>
				</tr>
				<tr>					
					<td>
						<div class="span3">Seat price:</div>
						<div class="span3">${{ id.ocassion.price }} AU</div>
					</td>
				</tr>				
				<tr>					
					<td style="text-align: center">
						<div><a href="{{ path('venue_details', { 'ocassion_id': id.ocassion.id, 'venue_id': id.venue.id }) }}" class="btn btn-primary">More details</a></div>
					</td>
					<td>						
						<div><input type="submit" class="btn btn-primary" value="Reserve"></div>
					</td>
				</tr>
				</form>
			</table>
		</div>	
	{% endfor %}

{% endblock %}